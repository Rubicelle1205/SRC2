@model WebPccuClub.Models.BorrowSecondClassMangViewModel

@{
    Layout = "_BackendLayout";

    List<SelectListItem> LstSubSystemBelong = ViewBag.ddlSubSystemBelong;
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <form method="post" id="form" enctype="multipart/form-data" action="">

                    <div class="card">
                        <div class="card-body table-responsive-sm">
                            <h6 class="card-subtitle mb-2 text-muted">
                                <a id="Back" href="@Url.Action("Index")" class="btn btn-outline-primary">返回</a>
                                <span class="required font-weight-bold">*</span> <small>為必填欄位</small>
                            </h6>
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th width="15%">@Html.LabelFor(m => m.CreateModel.MainClass)<span class="required">*</span></th>
                                        <td>@Html.DropDownListFor(m => m.CreateModel.MainClass ,(List<SelectListItem>)ViewBag.ddlMainClass,"請選擇主分類", new {@class = "form-control"})</td>
                                    </tr>
                                    <tr>
                                        <th width="15%">@Html.LabelFor(m => m.CreateModel.Text)<span class="required">*</span></th>
                                        <td>@Html.TextBoxFor(m => m.CreateModel.Text, new {@class = "form-control", placeholder = "請輸入子分類名稱"})</td>
                                    </tr>
                                    <tr>
                                        <th width="15%">@Html.LabelFor(m => m.CreateModel.Memo)</th>
                                        <td>@Html.TextAreaFor(m => m.CreateModel.Memo, new {@class = "form-control", placeholder = "請輸入備註", rows = "6"})</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                        <div class="card-footer d-flex justify-content-end">
                            <button type="button" class="mx-1 btn btn-outline-dark" onclick="Reset()">重設</button>
                            <button type="button" class="btn btn-success" onclick="SaveData()">儲存</button>
                        </div>
                    </div>
                    <!-- /.card -->
                </form>
                <!-- /.form -->
            </div>
        </div>
        <!-- /.row -->


    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script>


    function SaveData() {

        var data = new FormData()
        var MainClass = $('#@Html.IdFor(m => m.CreateModel.MainClass)').val();
        var Text = $('#@Html.IdFor(m => m.CreateModel.Text)').val();
        var Memo = $('#@Html.IdFor(m => m.CreateModel.Memo)').val();

        if (MainClass == "") { $.alert("所屬主分類需選擇"); return; }
        if (Text == "") { $.alert("子分類名稱不可為空白"); return; }

        data.append('@Html.NameFor(m => m.CreateModel.MainClass)', MainClass);
        data.append('@Html.NameFor(m => m.CreateModel.Text)', Text);
        data.append('@Html.NameFor(m => m.CreateModel.Memo)', Memo);

        SendAjax({
            url: '@Url.Action("SaveNewData")',
            data: data,
            processData: false,
            contentType: false,
            success: function (result) {
                if (result.errorCode == 0) {
                    $.confirm({
                        title: "",
                        content: "新增成功",
                        buttons: {
                            確定: function () {
                                Reset();
                            },
                        }
                    });
                }
                else { $.alert(result.errorMsg); }
            },
            error: function (response) {
                $.alert(result.errorMsg);
            }
        });
    }

    function Reset() {
        $('#@Html.IdFor(m => m.CreateModel.MainClass)').val("");
        $('#@Html.IdFor(m => m.CreateModel.Text)').val("");
        $('#@Html.IdFor(m => m.CreateModel.Memo)').val("");
    }
</script>